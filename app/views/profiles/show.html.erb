      <div class="myPage_user_bio">
        <%= current_user.profile&.bio || "自己紹介文はまだ登録されていません" %>
      </div>

      <div class="myPage_user_actionButton">
        <%= link_to 'Edit Profile', edit_profile_path %>
      </div>
    </div>
  </div>


<div class="container myPage myPage-profile">
  <div class="myPage-profile-bg">
    <%= image_tag current_user.background_image %>
  </div>

  <div class="myPage-user">
    <div class="myPage-user-image">
      <%= image_tag current_user.avatar_image %>
    </div>

    <div class="myPage-user-basicInfo">
      <div class="myPage-user-header">
        <div class="myPage-user-nickname">
          <%= current_user.profile&.nickname %>
        </div>

        <div class="myPage-user-actionButton">
          <%= link_to 'Edit Profile', edit_profile_path %>
        </div>
      </div>

      <div class="myPage-user-usertag">
        <%= current_user.usertag %>
      </div>

      <div class="myPage-user-bio">
        <%= current_user.profile&.bio || "自己紹介文はまだ登録されていません" %>
      </div>
    </div>
  </div>

